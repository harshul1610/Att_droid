<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/al"
        android:textColor="@android:color/white"
        android:id="@+id/add_emp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="@android:color/holo_red_dark"
        />



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/add_emp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/t1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:id="@+id/emp_name"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_marginTop="20dp"
            android:id="@+id/emp_id"
            />

    </TableLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/t1"
        android:id="@+id/L1"
        android:layout_alignLeft="@+id/t1"
        android:layout_alignStart="@+id/t1"
        android:layout_alignRight="@+id/add_emp"
        android:layout_alignEnd="@+id/add_emp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD to makers database"
            android:id="@+id/add1"
            android:background="@android:color/holo_blue_dark"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMOVE from makers database"
            android:id="@+id/rem"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_orange_light"/>
    </LinearLayout>

</RelativeLayout>
